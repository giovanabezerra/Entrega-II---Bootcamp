// Este script é injetado diretamente na página.
// Removemos o 'DOMContentLoaded' para garantir que a modificação ocorra
// imediatamente, resolvendo o problema de timing com o Playwright.

// Tenta obter o primeiro link <a> na página.
const link = document.querySelector('a'); 

// Se o link existir (o que acontece em https://example.com), aplica o estilo.
if (link) {
    // Aplica um estilo visível (diferente de 'none') para que o teste passe.
    link.style.outline = '4px solid red'; 
}

